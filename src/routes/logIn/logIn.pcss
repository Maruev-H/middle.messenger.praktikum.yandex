.login {
  width: 340px;
  border-radius: 12px;
  padding: 50px 30px 30px;
  box-shadow: 0px 0px 6px 0px rgba(0, 0, 0, 0.14);
  text-align: center;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);

  h1 {
    font-size: 20px;
    font-weight: 500;
    line-height: 20px;
    margin: 0 0 57px 0;
  }

  &__input_block {
    position: relative;

    label {
      position: absolute;
      font-size: 13px;
      font-weight: 500;
      line-height: 13px;
      color: var(--gray-color);
      top: 7px;
      left: 0;
      transition: 0.5s;
    }

    input:valid ~ label,
    input:focus:not(:placeholder-shown) ~ label {
      top: -10px;
      font-size: 9px;
    }
  }

  &__input {
    background: none;
    border: none;
    border-bottom: 2px solid var(--blue-color);;
    width: 100%;
    margin: 0 0 32px 0;
    font-size: 13px;
    font-weight: 500;
    line-height: 13px;
    padding: 7px 0;
    outline: none;
  }

  &__button {
    display: flex;
    width: 100%;
    height: 37px;
    border-radius: 8px;
    border: none;
    align-items: center;
    justify-content: center;
  }

  .blue_button {
    background: var(--blue-color);
    color: white;
    font-size: 13px;
    font-weight: 500;
    line-height: 13px;
    margin: 45% 0 0;
  }

  .white_button {
    background: none;
    font-size: 11px;
    font-weight: 500;
    line-height: 11px;
    color: var(--blue-color);
  }
}

.error_message {
  position: absolute;
  bottom: 8px;
  font-size: 9px;
  color: red;
}

.invalideInput {
  border-bottom: 2px solid red;
  animation: shake 0.3s;
}

@keyframes shake {
  0% {
    transform: translateX(0);
  }
  25% {
    transform: translateX(-3px);
  }
  50% {
    transform: translateX(3px);
  }
  75% {
    transform: translateX(-3px);
  }
  100% {
    transform: translateX(3px);
  }
}
